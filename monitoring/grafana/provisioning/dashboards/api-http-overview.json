  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Requests/s by Path",
      "datasource": "Prometheus",
      "fieldConfig": {"defaults": {}, "overrides": []},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "options": {"legend": {"displayMode": "list", "placement": "bottom"}},
      "targets": [
        {"expr": "sum by (path)(rate(http_requests_total{job=\"$job\", path=~\"$path\"}[1m]))", "refId": "A"}
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP Error Rate (%)",
      "datasource": "Prometheus",
      "fieldConfig": {"defaults": {}, "overrides": []},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "options": {"legend": {"displayMode": "list", "placement": "bottom"}},
      "targets": [
        {"expr": "100 * sum(rate(http_requests_total{job=\"$job\", status=~\"5..|4..\", path=~\"$path\"}[5m])) / sum(rate(http_requests_total{job=\"$job\", path=~\"$path\"}[5m]))", "refId": "A"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Request Latency p95/p99 (s) by Path",
      "datasource": "Prometheus",
      "fieldConfig": {"defaults": {}, "overrides": []},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "options": {"legend": {"displayMode": "list", "placement": "bottom"}},
      "targets": [
        {"expr": "histogram_quantile(0.95, sum by (le, path)(rate(http_request_duration_seconds_bucket{job=\"$job\", path=~\"$path\"}[5m])))", "refId": "A"},
        {"expr": "histogram_quantile(0.99, sum by (le, path)(rate(http_request_duration_seconds_bucket{job=\"$job\", path=~\"$path\"}[5m])))", "refId": "B"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Requests In-Flight",
      "datasource": "Prometheus",
      "fieldConfig": {"defaults": {}, "overrides": []},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "options": {"legend": {"displayMode": "list", "placement": "bottom"}},
      "targets": [
        {"expr": "sum(http_in_flight_requests{job=\"$job\"})", "refId": "A"}
      ]
    }
  ]
